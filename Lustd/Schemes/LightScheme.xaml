<ResourceDictionary x:Class="Lustd.Schemes.LightScheme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Lustd;component/Highlights/DefaultHighlight.xaml" />
        <ResourceDictionary>
            <SolidColorBrush x:Key="BackgroundDeepColour" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="BackgroundMidColour" Color="#DDDDDD"/>
            <SolidColorBrush x:Key="BackgroundShallowColour" Color="#BBBBBB"/>
            <SolidColorBrush x:Key="ForegroundDeepColour" Color="#666666"/>
            <SolidColorBrush x:Key="ForegroundMidColour" Color="#4A4A4A"/>
            <SolidColorBrush x:Key="ForegroundShallowColour" Color="#333333"/>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
