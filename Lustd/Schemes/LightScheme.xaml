<ResourceDictionary x:Class="Lustd.Schemes.LightScheme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Lustd;component/Highlights/DefaultHighlight.xaml" />
        <ResourceDictionary>
            <SolidColorBrush x:Key="BackgroundDeepColour" Color="#AAAAAA"/>
            <SolidColorBrush x:Key="BackgroundMidColour" Color="#EDEDED"/>
            <SolidColorBrush x:Key="BackgroundShallowColour" Color="#EEEEEE"/>
            <SolidColorBrush x:Key="ForegroundDeepColour" Color="#222222"/>
            <SolidColorBrush x:Key="ForegroundMidColour" Color="#333333"/>
            <SolidColorBrush x:Key="ForegroundShallowColour" Color="#4A4A4A"/>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
